@page "{Id}"
@model Elias.Admin.Pages.PortfolioGroup.UpdatePortfolioGroupModel
@{
    ViewData["Title"] = "ویرایش گروه جدید";
}

<div id="wrapper">

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">ویرایش گروه جدید</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <form asp-page="UpdatePortfolioGroup" method="post">
                    <input type="hidden" asp-for="Group.Id" />
                    <div class="panel panel-warning">
                        <div class="panel-heading">
                            اطلاعات گروه
                        </div>

                        <div class="panel-body">
                            <div class="form-group">
                                <label>نام گروه</label>
                                <input type="text" asp-for="Group.GroupName" class="form-control">
                                <span asp-validation-for="Group.GroupName"></span>
                            </div>
                            <button type="submit" class="btn btn-warning">ویرایش گروه جدید</button>

                        </div>

                    </div>
                </form>
            </div>
            <!-- /.col-lg-4 -->

        </div>

    </div>
    <!-- /#page-wrapper -->

</div>
