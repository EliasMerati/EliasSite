@page 
@model Elias.Admin.Pages.User.ChangePasswordModel
@{
    ViewData["Title"] = "عملیات کلمه ی عبور";
}

<div id="page-wrapper">
    <div class="row">
        <form asp-page="ChangePassword" class="form-horizontal col-sm-12" method="post">
            <div class="col-lg-8">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        تغییر کلمه ی عبور
                    </div>

                    <div class="panel-body">
                        <div class="form-group ">
                            <label asp-for="Change.OldPassword" class="control-label">کلمه ی عبور فعلی</label>
                            <input asp-for="Change.OldPassword" type="password" name="oldpassword" placeholder="کلمه ی عبور فعلی" id="oldpassword" class="form-control">
                            <span asp-validation-for="Change.OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <label asp-for="Change.Password" class="control-label">کلمه ی عبور جدید</label>
                            <input asp-for="Change.Password" type="password" name="password" placeholder="کلمه ی عبور جدید" id="password" class="form-control">
                            <span asp-validation-for="Change.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <label asp-for="Change.RePassword" class="control-label">تکرار کلمه ی عبور جدید</label>
                            <input asp-for="Change.RePassword" type="password" name="Repassword" placeholder="تکرار کلمه ی عبور جدید" id="repassword" class="form-control">
                            <span asp-validation-for="Change.RePassword" class="text-danger"></span>
                        </div>
                        <input type="submit" value="تغییر کلمه ی عبور" class="btn btn-success">

                    </div>
                    <div class="panel-footer">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>