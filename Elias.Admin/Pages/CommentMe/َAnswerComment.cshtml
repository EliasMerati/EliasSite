@page "{Id}"
@model Elias.Admin.Pages.CommentMe._َAnswerCommentModel
@{
    ViewData["Title"] = "ارسال جواب ایمیل به کاربر";
}

<div id="page-wrapper">
    <div class="row">
        <form method="post">
            <input type="hidden" asp-for="@Model.comment.Id" />
            <input type="hidden" asp-for="@Model.comment.Email" />
            <div class="col-lg-8">
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        اطلاعات ارسال جواب به "@Model.comment.Name"
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label> ارسال جواب به "@Model.comment.Name"</label>
                            <textarea name="answere" class="form-control"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success">ارسال جواب </button>

                    </div>
                    <div class="panel-footer">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
