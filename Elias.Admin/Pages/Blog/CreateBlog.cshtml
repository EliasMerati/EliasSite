@page
@model Elias.Admin.Pages.Blog.CreateBlogModel
@{
    ViewData["Title"] = "ثبت بلاگ جدید";
}


<div id="wrapper">

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">ثبت بلاگ جدید</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <form asp-page="CreateBlog" method="post" enctype="multipart/form-data">
                    <div class="panel panel-warning">
                        <div class="panel-heading">
                            اطلاعات بلاگ
                        </div>

                        <div class="panel-body">
                            <div class="form-group">
                                <label>موضوع بلگ</label>
                                <input type="text" asp-for="Blog.BlogSubject" class="form-control">
                                <span asp-validation-for="Blog.BlogSubject"></span>
                            </div>
                            <div class="form-group">
                                <label>گروه بلاگ</label>
                                <select class="form-control" asp-for="Blog.BlogGroup" asp-items="@(ViewData["Groups"] as SelectList)"></select>
                            </div>
                            <div class="form-group">
                                <label>نام نویسنده</label>
                                <input type="text" asp-for="Blog.Author" class="form-control">
                                <span asp-validation-for="Blog.Author"></span>
                            </div>
                            <div class="form-group">
                                <label>توضیح مختصر</label>
                                <textarea type="text" asp-for="Blog.BlogShortDescription" rows="10" class="form-control"></textarea>
                                <span asp-validation-for="Blog.BlogShortDescription"></span>
                            </div>
                            <div class="form-group">
                                <label>توضیح کامل</label>
                                <textarea type="text" asp-for="Blog.BlogDescription" rows="10" class="form-control"></textarea>
                                <span asp-validation-for="Blog.BlogDescription"></span>
                            </div>
                            <div class="form-group">
                                <label>عکس</label>
                                <input type="file" name="Image" id="BlogImage" asp-for="Blog.BlogImage" class="form-control">
                                <span asp-validation-for="Blog.BlogImage"></span>
                            </div>
                            <button type="submit" class="btn btn-success">ثبت بلاگ جدید</button>

                        </div>

                    </div>
                </form>
            </div>
            <!-- /.col-lg-4 -->

        </div>

    </div>
    <!-- /#page-wrapper -->

</div>

@section Scripts {

    <script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('Blog_BlogShortDescription', {
            customConfig: '/js/Config.js'
        });

        CKEDITOR.replace('Blog_BlogDescription', {
            customConfig: '/js/Config.js'
        });
    </script>

}