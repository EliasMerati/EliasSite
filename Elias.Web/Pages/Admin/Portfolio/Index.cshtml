@page
@using Elias.Application.Interfaces
@model Elias.Admin.Pages.Portfolio.IndexModel

@{
    ViewData["Title"] = "لیست نمونه کارها ";
}
@inject IPortfolioService _portfolio
<div class="box-body">
    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
            <div class="col-sm-12">
                <div class="col-md-12" style="margin:10px 0;">
                    <a asp-page="CreatePortfolio" class="btn btn-success">افزودن نمونه کار جدید</a>
                </div>
                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                    <thead>
                        <tr role="row">
                            <th>نام نمونه کار</th>
                            <th>گروه نمونه کار</th>
                            <th>نام کارفرما</th>
                            <th>تاریخ انجام</th>                    
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (_portfolio.IsPortfolioExist())
                        {
                            @foreach (var item in Model.portfolios)
                            {
                                <tr role="row" class="even">
                                    <td>@item.PortfolioName</td>
                                    <td>@item.PortfolioFamily</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.PortfolioDate</td>
                                    <td>
                                        <a asp-page="UpdatePortfolio" asp-route-Id="@item.Id" class="btn btn-warning btn-sm">ویرایش</a>
                                        <a asp-page="DeletePortfolio" asp-route-Id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>