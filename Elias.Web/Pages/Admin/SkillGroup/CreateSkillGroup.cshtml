@page
@model Elias.Admin.Pages.SkillGroup.CreateSkillGroupModel
@{
    ViewData["Title"] = "ثبت گروه مهارت جدید";
}

<div id="wrapper">

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">ثبت گروه مهارت جدید</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <form asp-page="CreateSkillGroup" method="post">
                    <div class="panel panel-warning">
                        <div class="panel-heading">
                            اطلاعات گروه مهارت
                        </div>

                        <div class="panel-body">
                            <div class="form-group">
                                <label>نام گروه مهارت</label>
                                <input type="text" asp-for="skillGroup.SkillGroupName" class="form-control">
                                <span asp-validation-for="skillGroup.SkillGroupName"></span>
                            </div>
                            <button type="submit" class="btn btn-success">ثبت گروه مهارت جدید</button>

                        </div>

                    </div>
                </form>
            </div>
            <!-- /.col-lg-4 -->

        </div>

    </div>
    <!-- /#page-wrapper -->

</div>