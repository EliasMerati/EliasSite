@page "{Id}"
@model Elias.Admin.Pages.Certificate.UpdateCertificateModel
@{
    ViewData["Title"] = "ثبت مدرک جدید";
}

<div id="wrapper">

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">ثبت مدرک جدید</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <form asp-page="UpdateCertificate" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="certificate.Id" />
                    <input type="hidden" asp-for="certificate.CertificateImage" />
                    <div class="panel panel-warning">
                        <div class="panel-heading">
                            اطلاعات مدرک
                        </div>

                        <div class="panel-body">
                            <div class="form-group">
                                <label>نام مدرک</label>
                                <input type="text" asp-for="certificate.CertificateName" class="form-control">
                                <span asp-validation-for="certificate.CertificateName"></span>
                            </div>
                            <div class="form-group">
                                <label>تاریخ اخذ مدرک</label>
                                <input type="text" asp-for="certificate.CertificateDate" class="form-control">
                                <span asp-validation-for="certificate.CertificateDate"></span>
                            </div>
                            <div class="form-group">
                                <label>شماره سریال مدرک</label>
                                <input type="text" asp-for="certificate.CertificateID" class="form-control">
                                <span asp-validation-for="certificate.CertificateID"></span>
                            </div>
                            <div class="form-group">
                                <label>عکس مدرک</label>
                                <input type="file" name="ImgCertificate" asp-for="certificate.CertificateImage" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-warning">ویرایش مدرک </button>

                        </div>

                    </div>
                </form>
            </div>
            <!-- /.col-lg-4 -->

        </div>

    </div>
    <!-- /#page-wrapper -->

</div>
