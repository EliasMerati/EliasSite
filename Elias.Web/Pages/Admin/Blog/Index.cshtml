@page
@using Elias.Application.Interfaces
@using Elias.Common
@model Elias.Admin.Pages.Blog.IndexModel
@{
    ViewData["Title"] = "لیست بلاگ ها ";
}
@inject IBlogService _Blog
<div class="box-body">
    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
            <div class="col-sm-12">
                <div class="col-md-12" style="margin:10px 0;">
                    <a asp-page="CreateBlog" class="btn btn-success">افزودن بلاگ جدید</a>
                </div>
                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                    <thead>
                        <tr role="row">
                            <th>موضوع بلاگ</th>
                            <th>نویسنده</th>
                            <th>گروه بلاگ</th>
                            <th>تاریخ بلاگ</th>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (_Blog.IsBlogExist())
                        {
                            @foreach (var item in Model.Blogs.Item1)
                            {
                                <tr role="row" class="even">
                                    <td>@item.BlogSubject</td>
                                    <td>@item.Author</td>
                                    <td>@item.BlogGroupName</td>
                                    <td>@item.BlogDate.ToShamsi()</td>
                                    <td>
                                        <a asp-page="UpdateBlog" asp-route-Id="@item.Id" class="btn btn-warning btn-sm">ویرایش</a>
                                        <a asp-page="DeleteBlog" asp-route-Id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
