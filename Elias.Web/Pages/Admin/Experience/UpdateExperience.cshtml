@page "{Id}"
@model Elias.Admin.Pages.Experience.UpdateExperienceModel
@{
    ViewData["Title"] = "ویرایش تجربیات ";
}

<div id="wrapper">

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">ویرایش تجربیات </h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <form asp-page="UpdateExperience" method="post">
                    <input type="hidden" asp-for="experience.Id" />
                    <div class="panel panel-warning">
                        <div class="panel-heading">
                            اطلاعات تجربیات
                        </div>

                        <div class="panel-body">
                            <div class="form-group">
                                <label>موضوع تجربه</label>
                                <input type="text" asp-for="experience.ExperienceSubject" class="form-control">
                                <span asp-validation-for="experience.ExperienceSubject"></span>
                            </div>
                            <div class="form-group">
                                <label>تازیخ تجربه</label>
                                <input type="text" asp-for="experience.ExperienceDate" class="form-control">
                                <span asp-validation-for="experience.ExperienceDate"></span>
                            </div>
                            <div class="form-group">
                                <label>توضیحات</label>
                                <input type="text" asp-for="experience.Description" class="form-control">
                                <span asp-validation-for="experience.Description"></span>
                            </div>
                            <button type="submit" class="btn btn-warning">ویرایش تجربیات </button>

                        </div>

                    </div>
                </form>
            </div>
            <!-- /.col-lg-4 -->

        </div>

    </div>
    <!-- /#page-wrapper -->

</div>
