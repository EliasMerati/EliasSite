@page "{Id}"
@model Elias.Admin.Pages.Skill.UpdateSkillModel
@{
    ViewData["Title"] = "ویرایش مهارت جدید";
}

<div id="wrapper">

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">ویرایش مهارت جدید</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <form asp-page="UpdateSkill" method="post">
                    <input type="hidden" asp-for="Skill.Id" />
                    <div class="panel panel-warning">
                        <div class="panel-heading">
                            اطلاعات مهارت
                        </div>

                        <div class="panel-body">
                            <div class="form-group">
                                <label>نام مهارت</label>
                                <input type="text" asp-for="Skill.SkillName" class="form-control">
                                <span asp-validation-for="Skill.SkillName"></span>
                            </div>
                            <div class="form-group">
                                <label>گروه مهارت</label>
                                <select class="form-control" asp-for="Skill.SkillGroupId" asp-items="@(ViewData["Groups"] as SelectList)"></select>
                            </div>
                            <div class="form-group">
                                <label>درصد مهارت</label>
                                <input type="text" asp-for="Skill.SkillValue" class="form-control">
                                <span asp-validation-for="Skill.SkillValue"></span>
                            </div>
                            <button type="submit" class="btn btn-warning">ویرایش مهارت جدید</button>

                        </div>

                    </div>
                </form>
            </div>
            <!-- /.col-lg-4 -->

        </div>

    </div>
    <!-- /#page-wrapper -->

</div>
