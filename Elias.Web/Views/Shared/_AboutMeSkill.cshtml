@using Elias.Application.Interfaces
@using Elias.Data.DTOs.SkillDto
@using Elias.Data.Entities.Skills
@inject ISkillService _Skill
@{

    List<SkillDto> skill = _Skill.GetSkillList();
    var result = skill.GroupBy(s => s.SkillGroupName);
}
<div class="row mb-5 mt-6">
    <div class="col">
        <h6 class="font-weight-700  mb-0 text-uppercase mb-2">مهارت‌های حرفه‌ای</h6>
        <hr class="divider divider-left divider-lg float-left">
    </div>
</div>
<div class="row vc skill dev mb-5">
    
    @foreach (var item in result)
    {
        <div class="col-md-11">
            <ul class="skills-list list-inline mb-0">
                @foreach (var item2 in item)
                {
                    <li>
                        <h6 class="font-weight-600 font-size-14 text-uppercase">@item2.SkillName</h6>
                        <div class="progress mb-3">
                            <div class="percentage" style="width:@item2.SkillValue%;">
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div  class="col-lg-1">
            <div class="title dev font-size-14">
                <span>@item.Key</span>
            </div>
        </div>
    }
    
</div>













