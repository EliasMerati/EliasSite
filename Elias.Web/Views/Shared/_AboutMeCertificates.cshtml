@using Elias.Application.Interfaces
@using Elias.Data.DTOs

@inject ICertificateService _CertificateService
@{
    List<CertificateDto> certificate = _CertificateService.GetCertificateList();
}
<div class="row mb-5 mt-6">
    <div class="col">
        <h6 class="font-weight-700  mb-0 text-uppercase mb-2">سرتیفیکت</h6>
        <hr class="divider divider-left divider-lg float-left">
    </div>
</div>
<div class="row">

    @foreach (var item in certificate)
    {
        <div class="col-lg-6 mb-3 mb-lg-0">
            <div class="p-2  radius-1 shadow-inner ">
                <div class=" shadow radius-1 p-4">
                    <div class="media  align-items-center">
                        <div class="d-none d-lg-block radius-5 mr-3">
                            <div class="shadow-inner  ui-icon ui-icon-xl ">
                                <div class="ui-icon-inner">
                                    <img style="width:100%; height:100%" src="/Certificate/@item.CertificateImage" />
                                </div>
                            </div>
                        </div>
                        <div class="media-body">
                            <h5 class="h6 font-weight-600 mb-0">@item.CertificateName</h5>
                            <span class="font-size-13 d-block">سرتیفیکت ای دی: @item.CertificateID<br><span class="text-alt font-size-12">@item.CertificateDate</span></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
