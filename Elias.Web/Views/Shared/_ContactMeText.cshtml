@using Elias.Data.Entities.Comment
@model Comment

<form class="contact-form" method="post" asp-action="CreateComment">
    <div class="row">
        <div class="col-sm-6">
            <div class="outer radius-2 mb-3">
                <input class="inner form-control h-100 " asp-for="@Model.Name" placeholder="نام"  id="name" name="name" type="text">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="outer radius-2 mb-3">
                <input class="inner form-control  h-100 " asp-for="@Model.Email" placeholder="ایمیل"  id="email" name="email" type="email">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="outer radius-2 mb-3">
                <input class="inner form-control  h-100 "  asp-for="@Model.Company" id="compagny" name="company" placeholder="شرکت" type="text">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="outer radius-2 mb-3">
                <input class="inner form-control  h-100 "  id="subject" asp-for="@Model.Subject" name="subject" placeholder="موضوع" type="text">
            </div>
        </div>
        <div class="col-12">
            <div class="outer radius-2 mb-3">
                <textarea class="radius-2 inner form-control   resize-n " asp-for="@Model.Text" name="Text" placeholder="پیام شما" id="message" rows="6"></textarea>
            </div>
        </div>
        <div class="col-12">
            <div class="outer radius-2 d-inline-block text-center">
                <button type="submit" class=" send inner radius-2 d-block py-2 px-4 font-size-15 font-weight-500 btn btn-outline-success">
                    ارسال پیام
                </button>
            </div>
        </div>
    </div>
</form>




